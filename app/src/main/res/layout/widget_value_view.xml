<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/android"
    app:layout_width="match_parent"
    app:layout_height="match_parent"
    app:background="@drawable/bg">

    <com.gin.blockly_demo.FitHeightTextView
        app:id="@+id/tv_title"
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        app:layout_alignParentLeft="true"
        app:gravity="left"
        app:includeFontPadding="false"
        app:maxLines="1"
        app:text="开关指示"
        app:textColor="@android:color/black"
        app:textSize="100sp"
        android:layout_heightPercent="20.8%"
        android:layout_marginBottomPercent="8.3%"
        android:layout_marginLeftPercent="5%"
        android:layout_marginRightPercent="5%"
        android:layout_marginTopPercent="8.3%"/>

    <android.support.percent.PercentRelativeLayout
        app:id="@+id/layout_bg"
        app:layout_width="match_parent"
        app:layout_height="match_parent"
        app:layout_below="@+id/tv_title"
        app:layout_centerHorizontal="true"
        app:background="@drawable/shape_wid_value_gray"
        android:layout_marginBottomPercent="5%"
        android:layout_marginLeftPercent="15%">

        <com.gin.blockly_demo.AutoResizeTextView
            app:id="@+id/tv_value_shadow"
            app:layout_width="match_parent"
            app:layout_height="match_parent"
            app:layout_alignParentRight="true"
            app:layout_centerInParent="true"
            app:layout_toRightOf="@+id/img_icon"
            app:background="@drawable/shape_wid_value_black"
            app:gravity="center"
            app:includeFontPadding="false"
            app:maxLines="1"
            app:text="8888"
            app:textColor="#636c77"
            app:textSize="100sp"
            app:textStyle="bold"/>

        <com.gin.blockly_demo.AutoResizeTextView
            app:id="@+id/tv_value"
            app:layout_width="match_parent"
            app:layout_height="match_parent"
            app:layout_alignParentRight="true"
            app:layout_centerInParent="true"
            app:layout_toRightOf="@+id/img_icon"
            app:gravity="center"
            app:includeFontPadding="false"
            app:maxLines="1"
            app:text="-000"
            app:textColor="#fffceb4f"
            app:textSize="100sp"
            app:textStyle="bold"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>