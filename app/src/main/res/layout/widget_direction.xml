<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res-auto"
                                               xmlns:app="http://schemas.android.com/apk/res/android"
                                               app:layout_width="match_parent"
                                               app:layout_height="match_parent"
                                               app:background="@drawable/bg">

    <android.support.percent.PercentRelativeLayout
        app:layout_width="match_parent"
        app:layout_height="match_parent"
        android:layout_marginBottomPercent="3%"
        android:layout_marginLeftPercent="3%"
        android:layout_marginRightPercent="3%"
        android:layout_marginTopPercent="3%"
        app:background="@drawable/shape_wid_direction_chart_black">

        <ImageView
            app:id="@+id/img_left"
            app:layout_width="0dp"
            app:layout_height="0dp"
            app:layout_alignParentLeft="true"
            app:layout_centerVertical="true"
            android:layout_heightPercent="50%"
            android:layout_widthPercent="50%"
            app:scaleType="fitXY"
            app:src="@drawable/sel_wig_direction_left"/>

        <ImageView
            app:id="@+id/img_top"
            app:layout_width="0dp"
            app:layout_height="0dp"
            app:layout_centerHorizontal="true"
            android:layout_heightPercent="50%"
            android:layout_widthPercent="50%"
            app:scaleType="fitCenter"
            app:src="@drawable/sel_wig_direction_top"/>

        <ImageView
            app:id="@+id/img_right"
            app:layout_width="0dp"
            app:layout_height="0dp"
            app:layout_alignParentRight="true"
            app:layout_centerVertical="true"
            android:layout_heightPercent="50%"
            android:layout_marginRightPercent="1.5%"
            android:layout_widthPercent="50%"
            app:scaleType="fitXY"
            app:src="@drawable/sel_wig_direction_right"/>

        <ImageView
            app:id="@+id/img_bottom"
            app:layout_width="0dp"
            app:layout_height="0dp"
            app:layout_alignParentBottom="true"
            app:layout_centerHorizontal="true"
            android:layout_heightPercent="50%"
            android:layout_widthPercent="50%"
            app:scaleType="fitCenter"
            app:src="@drawable/sel_wig_direction_bottom"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>